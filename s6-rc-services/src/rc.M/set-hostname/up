# This is a service to set the hostname
foreground { echo "Starting oneshot service:  set-hostname" }
ifelse { test -r /etc/HOSTNAME }
{
  pipeline { cut -f1 -d. /etc/HOSTNAME }
  withstdinas -n HOSTNAME
  importas -u hostname HOSTNAME
  hostname $hostname
}
# fall back on this old default:
background { redirfd -w 1 /etc/HOSTNAME echo "darkstar.example.net" }
hostname darkstar
