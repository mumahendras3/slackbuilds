#####################################################
# This service loads the device-mapper kernel module
#####################################################

foreground { echo "Starting oneshot service:  kmod-dm-mod" }
foreground { modprobe -v dm-mod }
# Check the exit status and print an error message for non-zero exit status
importas -u ? ?
ifthenelse { [ $? = 0 ] } {} { echo "(ERROR) Unable to start oneshot service:  kmod-dm-mod" }
exit $?
