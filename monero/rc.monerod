#!/bin/sh
#
# /etc/rc.d/rc.monerod - Start/stop/restart monerod (Monero node instance)
#

# Default settings:
CONF=/etc/monerod.conf
PID_FILE=/run/monero/monerod.pid

# Read system configuration file:
[ -r /etc/default/monerod ] && . /etc/default/monerod

start_monerod() {
  if ! ( /usr/bin/pgrep -F "$PID_FILE" 1>/dev/null 2>&1 || \
    /usr/bin/pgrep --ns $$ -f "^/usr/bin/monerod" 1>/dev/null 2>&1 ); then
    # Make sure the PID file parent directory exists
    install -domonero -gmonero "$(/usr/bin/dirname "$PID_FILE")"
    if [ -z "$DNS_PUBLIC" ]; then
      echo "Starting monerod: /usr/bin/monerod --detach --config-file ${CONF} --pidfile ${PID_FILE}"
      # Drop privileges with setpriv
      /usr/bin/setpriv --reuid=monero --regid=monero --inh-caps=-all --clear-groups \
        /usr/bin/monerod --detach --config-file "$CONF" --pidfile "$PID_FILE"
    else
      echo "Starting monerod: /usr/bin/torsocks /usr/bin/monerod --detach --no-igd --p2p-bind-ip 127.0.0.1 --config-file ${CONF} --pidfile ${PID_FILE}"
      # Drop privileges with setpriv
      /usr/bin/setpriv --reuid=monero --regid=monero --inh-caps=-all --clear-groups \
        /usr/bin/torsocks /usr/bin/monerod --detach --no-igd --p2p-bind-ip 127.0.0.1 --config-file "$CONF" --pidfile "$PID_FILE"
    fi
  fi
}

stop_monerod() {
  echo "Stopping monerod..."
  [ -r "$PID_FILE" ] && /usr/bin/pkill -F "$PID_FILE" || \
    /usr/bin/pkill --ns $$ -f "^/usr/bin/monerod" 2>/dev/null
}

restart_monerod() {
  stop_monerod
  sleep 1
  start_monerod
}

case "$1" in
'start')
  start_monerod
  ;;
'stop')
  stop_monerod
  ;;
'restart')
  restart_monerod
  ;;
*)
  echo "Usage: $0 start|stop|restart"
esac
